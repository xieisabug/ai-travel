{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "..",
    "baseUrl": "..",
    "paths": {
      "~/*": [
        "app/*"
      ]
    },
    "types": [
      "node"
    ]
  },
  "include": [
    "./**/*.ts",
    "../app/lib/**/*.ts",
    "../app/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}